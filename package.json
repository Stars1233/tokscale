{
  "name": "token-tracker-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Token Usage Leaderboard - The Kardashev Scale for AI Devs",
  "type": "module",
  "workspaces": [
    "packages/*",
    "frontend",
    "benchmarks"
  ],
  "scripts": {
    "postinstall": "yarn build:core",
    "build": "yarn build:core && yarn build:cli",
    "build:cli": "yarn workspace @0xinevitable/token-tracker build",
    "build:core": "yarn workspace @0xinevitable/token-tracker-core build",
    "cli": "yarn workspace @0xinevitable/token-tracker dev",
    "dev:frontend": "yarn workspace @token-tracker/frontend dev"
  },
  "devDependencies": {
    "@napi-rs/cli": "^3.4.1",
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
